<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.thoughtworks.mingle" android:versionCode="1"
	android:versionName="1.0">
	<uses-permission android:name="android.permission.INTERNET" />

	<application android:icon="@drawable/mingle_icon" android:label="@string/app_name">
		<activity android:name=".MingleMurmurs" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".About" android:label="@string/about_title"
			android:theme="@android:style/Theme.Dialog" />
		<activity android:name=".preferences.ConnectionPreferences"
			android:label="@string/settings_title" />
		<activity android:name=".preferences.ProjectPreferences"
			android:label="@string/change_project_title" />
		<activity android:name=".MurmursActivity" android:label="@string/murmurs_list_title" />
	</application>
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7" />
</manifest>